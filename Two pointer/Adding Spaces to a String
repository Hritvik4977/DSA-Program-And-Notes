class Solution {
    public String addSpaces(String s, int[] spaces) {
        StringBuilder sb = new StringBuilder(s);
        Arrays.sort(spaces);
        StringBuilder ans = new StringBuilder();
        int j=0;
        for(int i=0; i<sb.length(); i++)
        {
            if(j<spaces.length && i==spaces[j])
            {
                ans.append(" ");
                ans.append(sb.charAt(i));
                j++;
            }
            else
            {
                ans.append(sb.charAt(i));
            }
        }
        return ans.toString();
    }
}
